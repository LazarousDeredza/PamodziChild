                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#dddddd"
                            android:orientation="horizontal">




                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <TextView
