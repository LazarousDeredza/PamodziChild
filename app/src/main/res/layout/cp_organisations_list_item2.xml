<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_14sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/background_shape"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtOrganisationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:padding="@dimen/_3sdp"
                android:text="Organisation Name "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <Space
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/txtCountryCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Country, City"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"

              android:layout_gravity="center"  android:orientation="vertical"
                android:gravity="center"
                android:background="@color/OffWhite"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/companyImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:scaleType="centerCrop"

                    app:srcCompat="@drawable/nologo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/phoneblue" />


                    <TextView
                        android:id="@+id/txtPhone"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="+26377478043 " />


                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/whatsappicon" />
                    <TextView
                        android:id="@+id/txtWhatsapp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="+26377478043 " />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_11sdp"

                    android:padding="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/mailred" />



                    <TextView
                        android:id="@+id/txtEmail"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="keshokenya@gmail.com"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:padding="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/website" />

                    <TextView
                        android:id="@+id/txtWebsite"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textColor="@color/blueish"
                        android:layout_height="wrap_content"
                        android:text="www.keshokenya.co.ac.zw " />

                </LinearLayout>




            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>